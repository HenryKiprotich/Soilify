<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E7D32"
        android:padding="24dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Farmer"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvWeatherSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading weather..."
            android:textColor="#E8F5E9"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Smart Banner -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#E3F2FD"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Insight"
                android:textStyle="bold"
                android:textColor="#0D47A1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil moisture is low. Consider irrigation before applying Urea."
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Grid Menu -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="8dp">

        <!-- Record Usage -->
        <LinearLayout
            android:id="@+id/btnRecord"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record Usage"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Recommendations -->
        <LinearLayout
            android:id="@+id/btnRecommendations"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Advice"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Analytics -->
        <LinearLayout
            android:id="@+id/btnAnalytics"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analytics"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Alerts -->
        <LinearLayout
            android:id="@+id/btnAlerts"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerts"
                android:textStyle="bold"/>
        </LinearLayout>

    </GridLayout>

</LinearLayout>